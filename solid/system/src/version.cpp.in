#include "solid/system/version.hpp"
#include <string>

using namespace std;

namespace solid{
    const char* version_vcs_commit(){
        return "@PROJECT_VERSION_VCS_COMMIT@";
    }
    const char* version_vcs_branch(){
        return "@PROJECT_VERSION_VCS_BRANCH@";
    }
    const char* version_time(){
        return "@PROJECT_VERSION_TIME@";
    }
    const char* version_full(){
        static const string full = to_string(VERSION_MAJOR) + '.' + to_string(VERSION_MINOR) + "-" + version_vcs_branch() + "-" + version_vcs_commit() + "-" + version_time();
        return full.c_str();
    }
}//namespace solid
